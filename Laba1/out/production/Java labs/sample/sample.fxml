<GridPane fx:id="mainGrid" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="sample.Controller">
    <padding><Insets bottom="10" left="25" right="25" top="25" />
    </padding>
    <!--<gridLinesVisible>true</gridLinesVisible>-->


    <Label text="Растояние:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="distanceTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Скорость:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="speedTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#handleSubmitButtonAction" text="Посчитать" />
    </HBox>

    <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label fx:id="slogan" text="" GridPane.columnIndex="1" GridPane.rowIndex="7" />
